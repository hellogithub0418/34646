<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yx.dao.RepairCostMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.yx.model.RepairCost">
                    <id column="id" property="id"/>
                    <result column="repair_id" property="repairId"/>
                    <result column="price" property="price"/>
                    <result column="remarks" property="remarks"/>
                    
                    
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            id, repair_id, price, remarks
        </sql>

    

    <select id="queryRepairCostAll" parameterType="com.yx.model.RepairCost" resultMap="BaseResultMap">
        SELECT
        rep.*, rec.*
        
        FROM
        REPAIR rep
       
        LEFT JOIN repair_cost rec ON rec.repair_id = rep.repair_id

       
    </select>


  


</mapper>